<Window x:Class="DP_LAB1.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Лабораторна робота №1 - Варіант 9" 
        Height="685" 
        Width="900"
        MinHeight="450"
        MinWidth="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="ProcessButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#667eea" Offset="0"/>
                        <GradientStop Color="#764ba2" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            TextBlock.TextAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#5a67d8" Offset="0"/>
                                            <GradientStop Color="#6b46c1" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ResultSectionStyle" TargetType="Border">
            <Setter Property="Background" Value="#e7f3ff"/>
            <Setter Property="BorderBrush" Value="#b8daff"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="4" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DetailSectionStyle" TargetType="Border">
            <Setter Property="Background" Value="#fff3cd"/>
            <Setter Property="BorderBrush" Value="#ffeaa7"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="4" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ErrorSectionStyle" TargetType="Border">
            <Setter Property="Background" Value="#f8d7da"/>
            <Setter Property="BorderBrush" Value="#f5c6cb"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="4" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FormulaStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Background" Value="#f8f9fa"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="HighlightStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#dc3545"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="HighlightRunStyle" TargetType="Run">
            <Setter Property="Foreground" Value="#dc3545"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="SuccessStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#28a745"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="SuccessRunStyle" TargetType="Run">
            <Setter Property="Foreground" Value="#28a745"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                CornerRadius="12"
                Padding="20"
                Margin="0,0,0,20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#667eea" Offset="0"/>
                    <GradientStop Color="#764ba2" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect ShadowDepth="4" BlurRadius="12" Opacity="0.15"/>
            </Border.Effect>
            <TextBlock Text="🎯 Лабораторна робота №1" 
                       Foreground="White" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
        </Border>

        <Border Grid.Row="1" 
                Background="#d4edda" 
                BorderBrush="#c3e6cb" 
                BorderThickness="2" 
                CornerRadius="8" 
                Padding="16" 
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="🎯 Завдання варіанту 9:" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
                <TextBlock Text="Сформувати список з двох елементів:" FontWeight="Bold" Margin="0,0,0,4"/>
                <TextBlock Margin="20,0,0,4">
                    <Run Text="• "/>
                    <Run Text="Перший елемент" Foreground="#dc3545" FontWeight="Bold"/>
                    <Run Text=" - добуток від'ємних чисел у списку"/>
                </TextBlock>
                <TextBlock Margin="20,0,0,0">
                    <Run Text="• "/>
                    <Run Text="Другий елемент" Foreground="#dc3545" FontWeight="Bold"/>
                    <Run Text=" - довжина вхідного списку"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="📝 Вхідний список " 
                       FontWeight="Bold" 
                       Margin="0,0,0,8"/>
            <TextBox Text="{Binding InputList, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="14" 
                     Padding="12" 
                     MinHeight="40"
                     MaxHeight="80"
                     VerticalContentAlignment="Top"
                     HorizontalScrollBarVisibility="Auto"
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"/>
            <TextBlock Text="Підтримуються числа (цілі та дробові), текстові елементи. Розділювачі: кома, крапка з комою, пробіл"
                       Foreground="#6c757d" 
                       FontSize="11" 
                       Margin="0,4,0,0"/>
        </StackPanel>

        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Border Style="{StaticResource ErrorSectionStyle}" 
                        Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="❌ Помилка" 
                                   Foreground="#721c24" 
                                   FontWeight="Bold" 
                                   FontSize="16" 
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding ErrorMessage}" 
                                   Foreground="#721c24" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource ResultSectionStyle}" 
                        Visibility="{Binding IsProcessed, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="✅ Результат обробки" 
                                   Foreground="#155724" 
                                   FontWeight="Bold" 
                                   FontSize="16" 
                                   Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="📥 Вхідний список:" FontWeight="Bold" Margin="0,0,0,8"/>
                                <Border Background="#f8f9fa" 
                                        BorderBrush="#dee2e6" 
                                        BorderThickness="1" 
                                        CornerRadius="4" 
                                        Padding="12">
                                    <TextBlock Text="{Binding InputListFormatted}" 
                                               Style="{StaticResource FormulaStyle}"
                                               Background="Transparent"
                                               Padding="0"/>
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="📤 Результуючий список:" FontWeight="Bold" Margin="0,0,0,8"/>
                                <Border Background="#d4edda" 
                                        BorderBrush="#c3e6cb" 
                                        BorderThickness="2" 
                                        CornerRadius="4" 
                                        Padding="12">
                                    <TextBlock Text="{Binding ResultList}" 
                                               Style="{StaticResource SuccessStyle}"
                                               FontFamily="Consolas"
                                               FontSize="13"/>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <Border Style="{StaticResource DetailSectionStyle}" 
                                Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="🔍 Деталі обчислень:" 
                                           FontWeight="Bold" 
                                           FontSize="14" 
                                           Margin="0,0,0,8"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Margin="0,0,0,4">
                                            <Run Text="📏 Довжина списку: " FontWeight="Bold"/>
                                            <Run Text="{Binding ProcessingDetails.InputLength}" Style="{StaticResource HighlightRunStyle}"/>
                                        </TextBlock>
                                        <TextBlock>
                                            <Run Text="🔢 Кількість від'ємних: " FontWeight="Bold"/>
                                            <Run Text="{Binding ProcessingDetails.NegativeCount}" Style="{StaticResource HighlightRunStyle}"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock Margin="0,0,0,4">
                                            <Run Text="✖️ Добуток від'ємних: " FontWeight="Bold"/>
                                            <Run Text="{Binding ProcessingDetails.ProductOfNegatives}" Style="{StaticResource SuccessRunStyle}"/>
                                        </TextBlock>
                                        <TextBlock>
                                            <Run Text="🔻 Від'ємні числа: " FontWeight="Bold"/>
                                            <Run Text="{Binding ProcessingDetails.NegativeNumbersDisplay, TargetNullValue='відсутні (добуток = 1)'}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>